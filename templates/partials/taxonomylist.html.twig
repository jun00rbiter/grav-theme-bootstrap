{% set taxlist = taxonomylist.get() %}

{% if taxlist %}

<span class="tags">
    {% for tax,value in taxlist[taxonomy] %}

        {% set active = uri.param(taxonomy) == tax ? 'label-primary active' : 'label-default' %}
        <a class="label {{ active }}" href="{{ base_url }}/{{ taxonomy }}{{ config.system.param_sep }}{{ tax }}">{{ tax }}</a>

    {% endfor %}
</span>
{% endif %}
